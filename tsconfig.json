{
    "compilerOptions": {
        "experimentalDecorators": false,
        "emitDeclarationOnly": false,
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "ES6",
            "DOM"
        ],
        "esModuleInterop": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}